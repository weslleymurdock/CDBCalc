{
  "ReverseProxy": {
    "Routes": {
      "cdbRoute": {
        "ClusterId": "cdbCluster",
        "Match": {
          "Path": "/cdb/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/cdb" }
        ]
      }
    },
    "Clusters": {
      "cdbCluster": {
        "Destinations": {
          "default": {
            "Address": "http://cdbcalculator:8080/"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}