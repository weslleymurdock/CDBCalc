{
  "MicroServices": {
    "CBDCalc": {
      "Swagger": {
        "Uri": "http://localhost:5002/swagger/v1/swagger.json",
        "Name": "CBD Calculator API"
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:8080"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "cdbRoute": {
        "ClusterId": "cdbCluster",
        "Match": {
          "Path": "/gateway/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/gateway" }
        ]
      }
    },
    "Clusters": {
      "cdbCluster": {
        "Destinations": {
          "default": {
            "Address": "http://cdbcalculator:8080/"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}